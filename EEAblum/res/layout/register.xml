<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#E3E3E3">
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:gravity="center_vertical|center_horizontal">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/regs_title"
            android:textSize="30dp"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_weight="0.2"
    	android:gravity="center_vertical"
    	android:paddingRight="5dp"
	>

        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="@string/regs_user"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/nickname"
            android:hint="@string/regs_user_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape"
            android:padding="10dp"
            
           />
    </LinearLayout>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_weight="0.2"
    	android:gravity="center_vertical"
    	android:paddingRight="5dp"
	>
        <TextView 
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="@string/regs_password"
            android:textColor="#000000"
            android:textSize="16dp"
          	android:gravity="center_horizontal"
            />
        <EditText 
            android:id="@+id/password"
            android:hint="@string/regs_password_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape"
            android:padding="10dp"
            android:maxLength="16"
            android:inputType="textPassword"
            android:digits="@string/chardigit"
					/>
    </LinearLayout>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_weight="0.2"
    	android:gravity="center_vertical"
    	android:paddingRight="5dp"
	>
        <TextView 
            
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="@string/regs_confirm_word"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            />
        <EditText
            android:id="@+id/conpword"
            android:hint="@string/regs_confirmword_hint" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape"
            android:padding="10dp"
            android:maxLength="16"
            android:inputType="textPassword"
            android:digits="@string/chardigit"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_weight="0.2"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/imreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regs_register" 
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/btnshape"/>
        
    </LinearLayout>
    
</LinearLayout>