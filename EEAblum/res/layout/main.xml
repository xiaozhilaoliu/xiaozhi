<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#E3E3E3">

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.6"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/login_title"
        android:textColor="#000000"
        android:textSize="24dp" />
</LinearLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.2"
    >
    <TextView
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="@string/login_user"
	      android:textColor="#000000"
	      android:textSize="16dp"
	      android:padding="10dp"
       />
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/liparent"
    >
    <EditText
        android:id="@+id/username"
        android:hint="@string/log_user_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:background="@drawable/editshape" 
        android:layout_marginLeft="5dp" 
	    android:layout_marginRight="5dp" 
        />

     <ImageView
         android:id="@+id/select_img"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="15dp"
         android:src="@drawable/down_arrow1"
         android:contentDescription="@string/Imagediscrip" />

</RelativeLayout>
    
 
</LinearLayout>

<LinearLayout 
   	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_weight="0.2"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/login_password"
       android:textColor="#000000"
       android:textSize="16dp"
       android:padding="10dp"
       />

    <EditText
        android:id="@+id/userword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:background="@drawable/editshape"
        android:digits="@string/chardigit"
        android:maxLength="16"
        android:hint="@string/log_word_hint"
         />
    
</LinearLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
     android:layout_weight="0.1">
    <LinearLayout 
     	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
        <CheckBox
            android:id="@+id/remebword"
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
	        android:text="@string/login_reme_password"
	        android:paddingTop="10dp" 
	        android:textColor="#000000"
	        android:layout_gravity="left" />
    </LinearLayout>
     
	<LinearLayout 
	   	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:gravity="right">
     
	    <Button
	     android:id="@+id/login"  
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:text="@string/login_enter" 
        />
    <Button 
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/login_new_user"
        />
    
     </LinearLayout>

</LinearLayout>

</LinearLayout>